<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= (typeof(title) !== 'undefined') ? title : 'Szkoła Podstawowa' %>
    </title>
    <link rel="stylesheet" href="./bootstrap.min.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="stylesheet" href="./css/material.min.css" />
    <link rel="stylesheet" href="./css/notify.css" />
    <link rel="stylesheet" href="./css/jquery-confirm.min.css" />
    <link rel="stylesheet" href="./css/font-awesome.min.css" />
  </head>
  <body>
    <%- include('navbar_logged',{ active:3 })-%>

    <div class="container-fluid">
      <div>
        <hr />
        <h1 class="thin" style="text-align: center">Lista Asortymentu</h1>
        <input
          id="search"
          style="outline: none; width: 100%; margin-bottom: 30px"
          type="text"
          class="text-input"
          placeholder="Wyszukaj interesującą Cię frazę"
        />
      </div>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">
                # <i class="fa fa-sort" aria-hidden="true"></i>
              </th>
              <th scope="col">
                Nazwa <i class="fa fa-sort" aria-hidden="true"></i>
              </th>
              <th scope="col">
                Kod <i class="fa fa-sort" aria-hidden="true"></i>
              </th>
              <th scope="col">
                Rozszerzona Nazwa <i class="fa fa-sort" aria-hidden="true"></i>
              </th>
              <th scope="col">
                Opis <i class="fa fa-sort" aria-hidden="true"></i>
              </th>
              <th scope="col">
                Kategoria <i class="fa fa-sort" aria-hidden="true"></i>
              </th>
              <th scope="col">
                Stan <i class="fa fa-sort" aria-hidden="true"></i>
              </th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
            <tr id="tr_<%= data[i].id %>">
              <td scope="row" id="id_<%= data[i].id %>"><%= data[i].id %></td>
              <td id="name_<%= data[i].id %>"><%= data[i].name %></td>
              <td id="code_<%= data[i].id %>"><%= data[i].code %></td>
              <td id="info_<%= data[i].id %>"><%= data[i].info %></td>
              <td id="desc_<%= data[i].id %>"><%= data[i].desc %></td>
              <td id="cat_<%= data[i].id %>"><%= data[i].cat %></td>
              <td id="cat_<%= data[i].id %>">
                <%= data[i].stan == 1 ? 'Na stanie' : 'Brak' %>
              </td>
              <td style="width: 15%; text-align: center">
                <button
                  type="button"
                  class="btn btn-info btn-sm"
                  onclick="edit('<%= data[i].id %>')"
                >
                  Edytuj
                </button>
                <button
                  type="button"
                  class="btn btn-danger btn-sm"
                  onclick="remove('<%= data[i].id %>')"
                >
                  Usuń
                </button>
              </td>
            </tr>

            <% }; %>
          </tbody>
        </table>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          role="dialog"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-sm-4">
                    <div>ID:</div>
                    <input disabled class="form-control disp_id" />
                  </div>
                  <div class="col-sm-8">
                    <div>Nazwa Artykułu:</div>
                    <input type="text" class="form-control disp_name" />
                  </div>
                  <div class="col-sm-12">
                    <label>Kod:</label>
                    <input type="text" class="form-control disp_code" />
                  </div>
                  <div class="col-sm-12">
                    <label>Rozszerzona nazwa:</label>
                    <textarea
                      style="height: 50px"
                      class="form-control disp_ext"
                    ></textarea>
                  </div>
                  <div class="col-sm-12">
                    <label>Opis:</label>
                    <textarea
                      style="height: 50px"
                      class="form-control disp_desc"
                    ></textarea>
                  </div>
                  <div class="col-sm-12 disp_cat_div">
                    <label>Kategoria:</label>
                    <select class="custom-select disp_cat"></select>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Odrzuć
                </button>
                <button type="button" class="btn btn-primary saveModal">
                  Zapisz zmiany
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="./js/jquery.js"></script>
    <script src="./js/bootstrap.min.js"></script>
    <script src="./js/material.min.js"></script>
    <script src="./js/itemsmanage/itemsmanage.js"></script>
    <script src="./js/notify.js"></script>
    <script src="./js/jquery-confirm.min.js"></script>
  </body>
</html>
